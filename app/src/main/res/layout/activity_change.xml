<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="현재 비밀번호"
        android:fontFamily="@font/gangwongyoyugmodubold" />

    <EditText
        android:id="@+id/before_pwEdittext"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gangwongyoyugmodubold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="변경할 비밀번호"
        android:fontFamily="@font/gangwongyoyugmodubold" />

    <EditText
        android:id="@+id/after_pwEdittext"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gangwongyoyugmodubold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="비밀번호 확인"
        android:fontFamily="@font/gangwongyoyugmodubold"/>

    <EditText
        android:id="@+id/after_pwEdittext2"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gangwongyoyugmodubold"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="204dp"
        android:fontFamily="@font/gangwongyoyugmodubold"
        android:text=" 비밀번호는 숫자, 특수문자, 영문을 조합한 8 ~ 20자 사이만 가능합니다."
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#B7FA2C2C"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ChangeOkButton"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="완료"
        android:fontFamily="@font/gangwongyoyugmodubold"
        android:textSize="20sp" />

</LinearLayout>